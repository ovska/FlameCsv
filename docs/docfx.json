{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../FlameCsv.Core",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml",
      "disableDefaultFilter": true
    }
  ],
  "build": {
    "xref": [
      "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
    ],
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "data/node_modules/**",
          "data/*.json",
          "data/*.js",
          "data/js/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "data/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/material"
    ],
    "globalMetadata": {
      "_appName": "FlameCSV",
      "_appTitle": "FlameCSV",
      "_appLogoPath": "data/logo.png",
      "_appFaviconPath": "data/favicon.ico",
      "_enableSearch": true,
      "pdf": false
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
