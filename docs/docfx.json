{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/Core",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api",
      "filter": "filterConfig.yml",
      "disableDefaultFilter": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "data/node_modules/**",
          "data/*.json",
          "data/*.js",
          "data/js/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "data/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/material"
    ],
    "globalMetadata": {
      "_appName": "FlameCsv",
      "_appTitle": "FlameCsv",
      "_appLogoPath": "data/logo.svg",
      "_appFaviconPath": "data/favicon.ico",
      "_enableSearch": true,
      "pdf": false
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
