{
    "[**/*.Generated.*]": {
        "files.eol": "\r\n"
    },
    "[csharp]": {
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": false, // causes annoying cursor jumping when saving
        "editor.bracketPairColorization.enabled": true,
        "files.trimTrailingWhitespace": false,
        "editor.trimAutoWhitespace": false,
        //"editor.defaultFormatter": "ms-dotnettools.csharp",
        // "editor.codeActionsOnSave": {
        //     "source.fixAll": "explicit",
        //     "source.organizeImports": "explicit",
        // }
        "editor.defaultFormatter": "csharpier.csharpier-vscode",
    },
    "[xml]": {
        "editor.defaultFormatter": "csharpier.csharpier-vscode",
    },
    "files.trimTrailingWhitespace": false,
    "editor.trimAutoWhitespace": false,
    "csharp.format.enable": true,
    "dotnet.defaultSolution": "FlameCsv.sln",
    "omnisharp.enableEditorConfigSupport": true,
    "csharp.suppressHiddenDiagnostics": false,
    "csharp.suppressDotnetRestoreNotification": false,
    "dotnet.unitTestDebuggingOptions": {
        "debugTestMethod": true,
        "debugTestClass": true,
        "debugTestProject": true,
        "justMyCode": true,
        "suppressJITOptimizations": true,
        "type": "coreclr"
    },
    "csharpier.diagnosticsLevel": "2",
    "dotnet.autoInsert.enableAutoInsert": true,
    "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "fullSolution",
    "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "fullSolution",
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.unitTests.runSettingsPath": "test/.runsettings",
    "dotnet.quickInfo.showRemarksInQuickInfo": true,
    "dotnet.server.useServerGC": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        "**/node_modules/**": true,
        "**/bin/**": true,
        "**/obj/**": true,
        "**/BenchmarkDotNet.Artifacts/**": true,
        ".vs": true,
        ".idea": true,
        "FlameCsv.Fuzzing/Testcases/**": true,
        "docs/_site/**": true,
        "docs/api/**": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/bin/**": true,
        "**/obj/**": true,
        ".vs": true,
        ".idea": true,
        "ExternalAnnotations": true,
        "FlameCsv.sln.DotSettings": true,
        "FlameCsv.sln.DotSettings.user": true,
        "docs/_site/**": true,
        "docs/api/**": true,
    },
    "csharp.debug.justMyCode": true,
    "dotnet.enableXamlTools": true,
    "dotnet.preferVisualStudioCodeFileSystemWatcher": true,
    "dotnet.preview.enableSupportForSlnx": true,
    // https://raw.githubusercontent.com/PKief/vscode-material-icon-theme/main/images/folderIcons.png
    "material-icon-theme.folders.associations": {
        "Attributes": "Decorators",
        "BenchmarkDotNet.Artifacts": "Attachment",
        "benchmarkresults": "Benchmark",
        "Binding": "Resolver",
        "Comparers": "Target",
        "Comparisons": "Constant",
        "Converters": "Middleware",
        "Core": "Mojo",
        "Dictionaries": "Stack",
        "Enumeration": "CI",
        "Escaping": "Snippet",
        "Exceptions": "Error",
        "Formattable": "Template",
        "Fuzz": "Queue",
        "Fuzzing": "Queue",
        "Internal": "Private",
        "IO": "Shader",
        "Properties": "Config",
        "Readers": "Class",
        "Reading": "Class",
        "Reflection": "Trigger",
        "Runtime": "Config",
        "Scenarios": "Queue",
        "SourceGen": "Plugin",
        "Testcases": "Interface",
        "TestData": "Database",
        "Unescaping": "Snippet",
        "Writing": "Custom",
    },
    // https://raw.githubusercontent.com/PKief/vscode-material-icon-theme/main/images/fileIcons.png
    "material-icon-theme.files.associations": {
        "Program.cs": "Console",
        "*.Generated.cs": "Cobol", // same color as C# and "close enough", but still different
        "*.tt": "Log",
        "*.snk": "Lock",
    }
}
